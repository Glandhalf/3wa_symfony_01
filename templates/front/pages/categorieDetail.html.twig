{% block body %}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{categorie.picture}}" alt="{{categorie.description}}">
        <div class="card-body">
            <h5 class="card-title">{{categorie.name}}</h5>
        </div>
    </div>
    {% for product in categorie.products %}  
        <div class="card" style="width: 18rem;">
            <a href="{{ path('app_product_detail', {slug:product.slug})}}">  
                <img class="card-img-top" src="{{product.picture}}" alt="{{product.description}}">
                <div class="card-body">
                    <h5 class="card-title">{{product.name}}</h5>
                </div>
            </a>
        </div>
    {% endfor %}
{% endblock %}
