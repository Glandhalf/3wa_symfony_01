{% block body %}
{% for categorie in categories %}  
    <div class="card" style="width: 18rem;">
        <a href="{{ path('app_categorie_detail', {slug:categorie.slug})}}">  
            <img class="card-img-top" src="{{categorie.picture}}" alt="{{categorie.description}}">
            <div class="card-body">
                <h5 class="card-title">{{categorie.name}}</h5>
            </div>
        </a>
    </div>
{% endfor %}
{% endblock %}
