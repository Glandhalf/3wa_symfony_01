{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
{% for product in products %}    
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{product.picture}}" alt="{{product.description}}">
        <div class="card-body">
            <h5 class="card-title">{{product.name}}</h5>
            <p class="card-text">{{product.price}} €</p>
            <a href="{{ path('app_product_detail', {slug:product.slug})}}" class="btn btn-primary">Détails</a>
        </div>
    </div>
{% endfor %}
{% endblock %}
